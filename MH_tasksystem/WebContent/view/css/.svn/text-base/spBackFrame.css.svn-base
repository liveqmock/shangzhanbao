body {
	margin:0 auto;
	font-size:12px;
}
/*top*/
#Top_Left {
	float:left;
	width:352px;
	background:url(../../images/sp/HeadLeftImg.jpg) no-repeat left top;
	height:77px;
	position:absolute;
	left:0;
}
#Top_textdiv{
	float:left;
	height:77px;
	position:absolute;
	left:352px;
	top:0;
	
	color:#fff;
	z-index:99;
}
#Top_textdiv h1{
	height:20px;
	text-align:left;
	color:#fff;
	font-size:12px;
	font-weight:normal;
	margin:23px 0 0 0;
	padding:0;

}
#Top_textdiv span{
	height:23px;
	line-height:15px;
	text-align:left;
	color:#fff;
}
#Top_Right {
	float:right;
	width:513px;
	height:77px;
	color:#fff;
	text-align:right;
	line-height:77px;
	position:absolute;
	right:0;
	z-index:1
}
#Top_Right img{
	border:none;
	float:right
}
#Top_Right a {
	color:#fff;
	text-decoration:underline;
	margin:0 25px 0 25px;
}
#Top_Right a:hover {
	color:#F00;
	text-decoration:underline;
}
/*Left*/
.left_nav {
	width:100%;
	margin:0 auto;
}
.left_nav h1 {
	background:url(../../images/sp/left_topbg.jpg) repeat-x left top;
	line-height:30px;
	height:30px;
	color:#fff;
	font-size:14px;
	text-indent:20px;
	padding:0;
	margin:0;
}
.left_nav ul {
	list-style:none;
	width:100%;
	padding:0;
	margin:0;
}
.left_nav li {
	list-style:none;
	background:url(../../images/sp/left_navbg01.jpg) repeat-x left top;
	width:100%;
	height:30px;
	line-height:30px;
	float:left;
	padding:0;
	text-align:left;
	font-size:14px;
	color:#333;
	text-indent:20px;
	cursor:default;
	border:1px solid #c1c1c1;
	margin:1px 0;
}
.left_nav li a:link, .left_nav li a:visited {
	line-height:30px;
	color:#333;
	text-decoration:none;
	background:none;
}
.left_nav li a:hover, .left_nav li a:active {
	color:#333;
	text-decoration:underline;
}
.left_nav li.curb {
	list-style:none;
	/*	background:url(../../images/sp/left_nav_bg.jpg) no-repeat left top;*/	
	background:url(../../images/sp/home_leftnavbg.jpg) repeat-x left top;
	width:100%;
	height:30px;
	line-height:30px;
	float:left;
	padding:0;
	text-align:left;
	font-size:14px;
	color:#fff;
	text-indent:20px;
	font-weight:bold;
	border:1px solid #0a7704;
}
.left_nav li.curb a:link, .left_nav li.curb a:visited {
	line-height:30px;
	color:#fff;
	text-decoration:none;
	background:none;
}
.left_nav li.curb a:hover, .left_nav li.curb a:active {
	color:#fff;
	text-decoration:none;
}
/*ctrl*/
.ctrl_1 {
	background:url(../../images/sp/ctrl_1.gif) no-repeat;
	width:4px;
	height:61px;
	overflow:hidden;
	margin-left:-1px;
	position:relative;
	cursor:pointer
}
.ctrl_2 {
	background:url(../../images/sp/ctrl_2.gif) no-repeat;
	width:4px;
