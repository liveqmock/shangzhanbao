.upload_div { margin:0 auto; width:100%; overflow:hidden; padding:0 0; } 
.line { position:relative; margin:0 auto; width:300px; text-align:left } 
.line span.span { float:left; padding-top:2px; } 
.file { position:absolute; left:0; width:250px; top:0;
 height:25px; filter:alpha(opacity=0); opacity:0; cursor: pointer } 
.file_btn { float:left; margin-left:8px; margin-top:2px; z-index:1; width:50px;
 height:25px; line-height:25px; background:#CCCCCC;cursor: pointer; font-size:13px; text-align: center; border: none;} 
.inputstyle { border:1px solid #BEBEBE; width:170px; float:left;
 height:23px; line-height:23px; background:#FFF; z-index:99 } 