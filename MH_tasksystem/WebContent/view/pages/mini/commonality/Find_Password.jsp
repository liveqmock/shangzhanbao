<%@ page language="java" contentType="text/html; charset=utf-8"
	pageEncoding="utf-8"%>
<%@ taglib uri="/struts-tags" prefix="s"%>
<%@include file="/baseHead.jsp"%>

<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="/WEB-INF/tag/PageTag.tld" prefix="page"%>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>找回密码 - 商站宝</title>
<link rel="stylesheet" type="text/css" href="${root }/view/css/mini/minicss.css"/>
<script type="text/javascript" src="${root}/view/js/minipage/common/findPwd.js"></script>
</head>
<body style="background-image: url('${root}/img/bg_404.jpg')">
<div  class="pwdDiv1">
  <div class="pwdDiv2"><span class="div2span1">找回密码</span><a style="text-decoration: none;" href="${root }/view/pages/mini/front/login.jsp" class="div2span" style="">返回登录―></a></div>
  <div style="padding-top:40px;">
    <hr class="hr"/>
  </div>
  <div align="left" class="pwdDiv3"> 通过邮箱找回 </div>
  <div align="left" style="margin-top:20px;" class="pwdDiv4">
    <input type="text"  class="inp email" placeholder="请输入你的登录邮箱"  onkeyup="pwdCheck()" />
    <input type="button" class="btn emailBtn"  style=""  value="开始找回"  onclick="emailBtn()"/>
  </div>
   <div class="error"	style="margin-left: 0px;margin-top: 10px; display:none ;padding-top: 0px;"></div>
  <div style="margin-top:50px;" >
    <div style="float:left;font-weight: 200;font-size: 16px;color: #0099CC;">或者</div>
    <div>
      <hr class="hr1" />
    </div>
  </div>
  <div align="left" style="font-weight: 200;font-size: 16px;color: #6B6B6B; padding-top:36px;">通过手机号码找回</div>
  <div align="left" style="margin-top:20px;" class="pwdDiv4">
    <input type="text" class="inp"  placeholder="请输入你的登录手机号码"  />
    <input type="button" class="btn"   value="开始找回" />
  </div>
</div>
</body>
</html>
