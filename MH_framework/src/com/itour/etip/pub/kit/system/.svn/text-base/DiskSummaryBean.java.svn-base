package com.itour.etip.pub.kit.system;

import java.util.ArrayList;
import java.util.List;

/**
 * <b>描述: 磁盘信息的统计信息, 包括所有所有磁盘的信息</b><br>
 * <br>
 * <b>示例:</b><br>
 * <br>
 * 
 * @author zhangjj
 * @version 1.00 created on 2008-1-24
 */
public class DiskSummaryBean {
    private int totalDisk;
    private List<String> diskList = new ArrayList<String>();

    /**
     * get totalDisk
     * 
     * @return totalDisk author zhangjj created on 2008-1-24
     */
    public int getTotalDisk() {
        return totalDisk;
    }

    /**
     * set totalDisk
     * 
     * @param totalDisk
     *            the totalDisk to set author zhangjj created on 2008-1-24
     */
    public void setTotalDisk(int totalDisk) {
        this.totalDisk = totalDisk;
    }

    /**
     * get diskList
     * 
     * @return diskList author zhangjj created on 2008-1-24
     */
    public List<String> getDiskList() {
        return diskList;
    }

    /**
     * set diskList
     * 
     * @param diskList
     *            the diskList to set author zhangjj created on 2008-1-24
     */
    public void setDiskList(List<String> diskList) {
        this.diskList = diskList;
    }

    /**
     * 增加一个磁盘
     * 
     * @param disk
     *            磁盘名 author zhangjj created on 2008-1-24
     */
    public void addDisk(String disk) {
        this.diskList.add(disk);
    }

}
